<!DOCTYPE html>
<html>
<head>
  <title>ProjectManagement</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="space"></div>
<div class="container-fluid">


	<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">

					&nbsp;
						<%= link_to "Home", root_path, class: "btn btn-default"  %>
				  &nbsp;
						<%= link_to "About", about_path, class: "btn btn-default" %>
          &nbsp;
						<%= link_to "Projects", projects_path, class: "btn btn-default" %>
          &nbsp;
            <%= link_to "New Project", new_project_path, class: "btn btn-default" %>          

            
            <div class="pull-right">
              <% if user_signed_in? %>
                <div style="color:white;font-size:20px">Hello <%= current_user.full_name %></div>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
              <% else %>
                <%= link_to "Sign in", new_user_session_path, class: "btn btn-default" %>
              <% end %>
            </div>

      </div>
	</div>


<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= yield %>
</div>
</body>
</html>
