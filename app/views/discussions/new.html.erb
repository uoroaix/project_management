<% if @discussion.errors.any? %>
  <ul>
    <% @discussion.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1>New Discussion</h1>
<div class="space"></div>

<%= form_for @discussion, url: project_discussions_path(@project) do |f| %>

  <%= f.label :title, "Topic:" %>  
  <%= f.text_field :title %>
  <br>
  <%= f.text_area :description %>
  <br>

  <%= f.submit "Create Discussion", class: "btn btn-secondary" %>


<% end %>