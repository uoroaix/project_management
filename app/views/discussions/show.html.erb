<div class="container">
  <div class="row">
    <div class="well">
      <h1><%= @discussion.title %></h1>
      <p><%= @discussion.description %></p>
      <%= button_to "Add Comment!", new_discussion_comment_path(@discussion), method: :get, class: "btn btn-default" %>
    </div>
  </div>
  <% @discussion.comments.each do |comment| %>
    <div class="row">
      <div class="well">
       <p><%= comment.body %></p>
        <%= button_to "Delete", discussion_comment_path(@discussion, comment), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>

