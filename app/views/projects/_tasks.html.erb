<h1>Tasks</h1>
<hr>
<%= form_for @task, url: project_tasks_path(@project) do |f| %>
  <%= f.label :title, "Your Task's Title: " %>
  <%= f.text_field :title %>
  <br>
  <%= f.text_area :body %>
  <br>
  <%= f.submit "New Task!", class: "btn btn-default" %>
<% end %> 
<div class="space"></div>
<% @tasks.each do |task| %>
<div class="well">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2><%= task.title %></h2>
        <p><%= task.body %></p>
      </div>
      <div class="col-md-3">
      <%= button_to task.status, status_project_task_path(@project, task), method: :get, class: "btn btn-default" %>
      <br>
      <%= button_to "Delete", project_task_path(@project, task), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete?"} %>
      <br>
      <%= button_to "Edit", edit_project_task_path(@project, task), method: :get, class: "btn btn-default" %>
      <br>
      <p>Created On: <%= formatted_date(task.created_at) %></p>
      </div>
    </div>
  </div>
</div>
<% end %>

