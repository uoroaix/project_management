<% if @project.errors.any? %>
	<ul>
		<% @project.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @project do |f| %>

	<%= f.label :title, "Enter your project's title:" %>  
	<%= f.text_field :title %>
	<br>

  <%= f.submit button_label, class: "btn btn-secondary" %>


<% end %>